<Window x:Class="_3ISIP_422_Vybornov_Golovin_PR3._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3ISIP_422_Vybornov_Golovin_PR3._2"
        mc:Ignorable="d"
        Title="Вычисление заработной платы" Height="252.4" Width="500">
    <Grid Background="#FFEEE6E6">
        <Label Content="Количество часов:" HorizontalAlignment="Left" FontSize="12" Margin="18,25,0,0" VerticalAlignment="Top" Width="111"/>
        <TextBox x:Name="hours"  HorizontalAlignment="Left" Height="23" Margin="134,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" PreviewTextInput="hours_PreviewTextInput"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="98" Margin="254,45,0,0" Stroke="Black" VerticalAlignment="Top" Width="212" Opacity="0.3"/>
        <Label Content="Преподаватель" HorizontalAlignment="Left" FontSize="12" Margin="254,25,0,0" VerticalAlignment="Top" Width="111"/>
        <RadioButton x:Name="rad1" Content="ассистент" HorizontalAlignment="Left" Margin="267,55,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rad2" Content="доцент" HorizontalAlignment="Left" Margin="267,85,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rad3" Content="профессор" HorizontalAlignment="Left" Margin="267,115,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="check_tax" Content="Подоходный налог (13%)" FontSize="12" HorizontalAlignment="Left" Margin="18,118,0,0" VerticalAlignment="Top"/>
        <Button x:Name="calculate" Content="Вычислить" HorizontalAlignment="Left" Margin="254,169,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="calculate_Click"/>
        <Label Content="Начислено:" HorizontalAlignment="Left" FontSize="13" Foreground="#FF910505" Margin="18,160,0,0" VerticalAlignment="Top" Width="111" Background="{x:Null}"/>
        <Label Content="в том числе налог:" HorizontalAlignment="Left" FontSize="13" Foreground="#FF910505" Margin="18,184,0,0" VerticalAlignment="Top" Width="121" Background="{x:Null}"/>
        <TextBox x:Name="salarybox" HorizontalAlignment="Left" Height="23" Margin="100,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" IsEnabled="False" FontSize="12" Foreground="Black" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <TextBox x:Name="taxbox" HorizontalAlignment="Left" Height="23" Margin="139,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" IsEnabled="False" FontSize="12" Foreground="Black" Background="{x:Null}" BorderBrush="{x:Null}"/>

    </Grid>
</Window>
